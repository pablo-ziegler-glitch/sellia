rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isFixedSuperAdmin() {
      return isAuthenticated()
        && request.auth.token.email is string
        && request.auth.token.email.lower() == 'pabloz18ezeiza@gmail.com';
    }

    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userData() {
      return userDoc().data;
    }

    function userTenantId() {
      return userData().tenantId;
    }

    function isTenantUser(tenantId) {
      return isAuthenticated()
        && (userTenantId() == tenantId || isFixedSuperAdmin());
    }

    function isBackend() {
      return isAuthenticated() && request.auth.token.backend == true;
    }

    function hasAdminClaim() {
      return isFixedSuperAdmin()
        || request.auth.token.admin == true
        || request.auth.token.role == 'admin';
    }

    function hasAdminField() {
      return userData().role == 'admin'
        || userData().isAdmin == true
        || userData().isSuperAdmin == true;
    }

    function isAdminUser() {
      return isAuthenticated() && (hasAdminClaim() || hasAdminField());
    }

    function isAdminForTenant(tenantId) {
      return isAdminUser();
    }

    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.tenantId is string
        && (
          exists(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId))
          || existsAfter(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId))
        );
      allow update: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.tenantId == resource.data.tenantId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    match /tenants/{tenantId} {
      allow read: if isTenantUser(tenantId) || isAdminUser();
      allow create: if isAuthenticated()
        && request.resource.data.id == tenantId
        && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isAdminUser()
        || (isAuthenticated() && resource.data.ownerUid == request.auth.uid);
    }

    match /account_requests/{requestId} {
      allow create: if isAuthenticated()
        && request.auth.uid == requestId;
      allow read: if isAuthenticated()
        && (request.auth.uid == requestId || isAdminUser());
      allow update, delete: if isAdminUser();
    }

    match /tenant_users/{tenantUserId} {
      allow read: if isAdminForTenant(resource.data.tenantId);
      allow write: if isAdminForTenant(request.resource.data.tenantId);
    }

    match /tenant_directory/{tenantId} {
      allow read: if true;
      allow create: if isAuthenticated()
        && request.resource.data.id == tenantId
        && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isAdminUser()
        || (isAuthenticated() && resource.data.ownerUid == request.auth.uid);
    }

    match /tenants/{tenantId}/orders/{orderId} {
      allow read: if isTenantUser(tenantId);
      allow write: if isBackend();
    }

    match /tenants/{tenantId}/payments/{paymentId} {
      allow read, write: if isBackend();
    }

    match /tenants/{tenantId}/public_products/{productId} {
      allow read: if true;
      allow write: if isBackend() || isAdminForTenant(tenantId);
    }

    match /usage/{usageId} {
      allow read: if isAdminForTenant(resource.data.tenantId);
      allow write: if isBackend();
    }

    match /limits/{limitId} {
      allow read: if isTenantUser(resource.data.tenantId);
      allow write: if isAdminForTenant(resource.data.tenantId) || isBackend();
    }

    match /alerts/{alertId} {
      allow read: if isAdminForTenant(resource.data.tenantId);
      allow write: if isBackend();
    }

    match /tenants/{tenantId}/{document=**} {
      allow read, write: if isTenantUser(tenantId);
    }
  }
}
