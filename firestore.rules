rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isFixedSuperAdmin() {
      return isAuthenticated()
        && request.auth.token.email is string
        && request.auth.token.email.lower() == 'pabloz18ezeiza@gmail.com';
    }

    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }

    function hasUserDoc() {
      return isAuthenticated()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function hasUserProfile() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userData() {
      return userDoc().data;
    }

    function userTenantId() {
      return userData().tenantId;
    }

    function isUserActive() {
      return hasUserProfile()
        && (
          userData().status == 'active'
          || userData().isActive == true
        );
    }

    function hasTenantWriteRole() {
      return isFixedSuperAdmin()
        || (
          hasUserProfile()
          && (
            userData().role in ['owner', 'manager', 'cashier', 'admin']
            || userData().isAdmin == true
            || userData().isSuperAdmin == true
          )
        );
    }

    function isTenantUser(tenantId) {
      return isAuthenticated()
        && (
          isFixedSuperAdmin()
          || (
            hasUserProfile()
            && userTenantId() == tenantId
            && isUserActive()
          )
        );
    }

    function isBackend() {
      return isAuthenticated() && request.auth.token.backend == true;
    }

    function hasAdminClaim() {
      return isFixedSuperAdmin()
        || request.auth.token.admin == true
        || request.auth.token.role == 'admin';
    }

    function hasAdminField() {
      return hasAdminClaim();
    }

    function hasNoClientManagedAdminFlags() {
      return request.resource.data.isAdmin != true
        && request.resource.data.isSuperAdmin != true
        && !('permissions' in request.resource.data);
    }

    function hasAllowedUserRole() {
      return request.resource.data.role in ['owner', 'admin', 'manager', 'cashier', 'viewer'];
    }

    function isValidUserDocBase() {
      return request.resource.data.keys().hasOnly([
          'email',
          'tenantId',
          'role',
          'status',
          'accountType',
          'isAdmin',
          'isSuperAdmin'
        ])
        && request.resource.data.email is string
        && request.resource.data.tenantId is string
        && request.resource.data.status is string
        && request.resource.data.accountType in ['store_owner', 'final_customer']
        && hasAllowedUserRole()
        && hasNoClientManagedAdminFlags();
    }

    function isValidUserDocCreate() {
      return isValidUserDocBase();
    }

    function isValidUserDocUpdate() {
      return isValidUserDocBase();
    }

    function hasManageUsersRole() {
      return hasUserDoc()
        && (
          userData().role in ['admin', 'owner']
          || userData().isAdmin == true
          || userData().isSuperAdmin == true
        );
    }

    function userPermissions() {
      return hasUserDoc() && userData().permissions is list
        ? userData().permissions
        : [];
    }

    function hasMaintenanceReadAccess() {
      return isFixedSuperAdmin()
        || (
          hasUserDoc()
          && (
            userData().role in ['owner', 'admin']
            || userData().isAdmin == true
            || userData().isSuperAdmin == true
            || 'MAINTENANCE_READ' in userPermissions()
            || 'MAINTENANCE_WRITE' in userPermissions()
          )
        );
    }

    function hasMaintenanceWriteAccess() {
      return isFixedSuperAdmin()
        || (
          hasUserDoc()
          && (
            userData().role in ['owner', 'admin']
            || userData().isAdmin == true
            || userData().isSuperAdmin == true
            || 'MAINTENANCE_WRITE' in userPermissions()
          )
        );
    }

    function isValidMaintenanceStatus(status) {
      return status in ['pending', 'in_progress', 'blocked', 'completed', 'cancelled'];
    }

    function isValidMaintenancePriority(priority) {
      return priority in ['low', 'medium', 'high', 'critical'];
    }

    function isValidMaintenanceTask(data, tenantId) {
      return data.tenantId == tenantId
        && data.title is string
        && data.title.size() >= 3
        && data.status is string
        && isValidMaintenanceStatus(data.status)
        && data.priority is string
        && isValidMaintenancePriority(data.priority)
        && (!('assigneeUid' in data) || data.assigneeUid is string)
        && (!('dueAt' in data) || data.dueAt is timestamp)
        && data.createdAt is timestamp
        && data.updatedAt is timestamp
        && data.createdByUid is string
        && data.updatedByUid is string
        && (!('trace' in data) || data.trace is map);
    }

    function isAdminUser() {
      return isAuthenticated() && (hasAdminClaim() || hasAdminField());
    }

    function isAdminForTenant(tenantId) {
      return isAdminUser()
        || (
          isAuthenticated()
          && userTenantIdMatches(tenantId)
          && hasManageUsersRole()
        );
    }

    function userRole() {
      return hasUserDoc() && userData().role is string ? userData().role : '';
    }

    function hasRole(roles) {
      return isFixedSuperAdmin()
        || (hasUserDoc() && userRole() in roles)
        || hasAdminField();
    }

    function canWriteConfig(tenantId, configId) {
      return isTenantUser(tenantId)
        && (
          (configId == 'pricing' && hasRole(['owner', 'admin']))
          || (configId == 'marketing' && hasRole(['owner', 'admin', 'manager']))
          || (configId == 'security' && hasRole(['owner', 'admin']))
          || (configId == 'cloud_services' && hasRole(['owner', 'admin']))
          || (configId == 'development_options' && hasRole(['owner', 'admin']))
        );
    }

    function isRestrictedTenantDocumentPath(documentPath) {
      return documentPath.matches('maintenance_tasks(/.*)?')
        || documentPath.matches('config(/.*)?')
        || documentPath.matches('orders(/.*)?')
        || documentPath.matches('payments(/.*)?')
        || documentPath.matches('public_products(/.*)?');
    }

    function isSelfTenantUserWrite() {
      return isAuthenticated()
        && request.resource.data.tenantId is string
        && request.resource.data.email is string
        && request.auth.token.email is string
        && request.resource.data.email.lower() == request.auth.token.email.lower()
        && (
          exists(/databases/$(database)/documents/users/$(request.auth.uid))
          || existsAfter(/databases/$(database)/documents/users/$(request.auth.uid))
        )
        && (
          (
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == request.resource.data.tenantId
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == request.resource.data.role
          )
          || (
            getAfter(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == request.resource.data.tenantId
            && getAfter(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == request.resource.data.role
          )
        );
    }

    function isOwnerBootstrapWrite(userId) {
      return request.auth.uid == userId
        && request.resource.data.role == 'owner'
        && request.resource.data.accountType == 'store_owner'
        && request.resource.data.isAdmin != true
        && request.resource.data.isSuperAdmin != true
        && !('permissions' in request.resource.data)
        && request.resource.data.tenantId is string
        && (
          (
            exists(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId))
            && get(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId)).data.ownerUid == request.auth.uid
          )
          || (
            existsAfter(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId))
            && getAfter(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId)).data.ownerUid == request.auth.uid
          )
        );
    }

    function isFinalCustomerSelfWrite(userId) {
      return request.auth.uid == userId
        && request.resource.data.role == 'viewer'
        && request.resource.data.accountType == 'final_customer'
        && request.resource.data.status == 'active'
        && request.resource.data.isAdmin != true
        && request.resource.data.isSuperAdmin != true
        && !('permissions' in request.resource.data)
        && (
          !(request.resource.data.tenantId is string)
          || exists(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId))
        );
    }

    function keepsSelfRoleDataImmutable() {
      return request.resource.data.role == resource.data.role
        && request.resource.data.accountType == resource.data.accountType
        && request.resource.data.isAdmin == resource.data.isAdmin
        && request.resource.data.isSuperAdmin == resource.data.isSuperAdmin;
    }

    match /users/{userId} {
      allow read: if isAuthenticated()
        && (
          request.auth.uid == userId
          || isAdminForTenant(resource.data.tenantId)
        );
      allow create: if isAuthenticated()
        && isValidUserDocCreate()
        && request.resource.data.tenantId is string
        && request.resource.data.accountType in ['store_owner', 'final_customer']
        && (
          isOwnerBootstrapWrite(userId)
          || isFinalCustomerSelfWrite(userId)
          || isAdminForTenant(request.resource.data.tenantId)
        );
      allow update: if isAuthenticated()
        && isValidUserDocUpdate()
        && (
          (
            request.auth.uid == userId
            && keepsSelfRoleDataImmutable()
            && (
              request.resource.data.tenantId == resource.data.tenantId
              || (
                !(resource.data.tenantId is string)
                && request.resource.data.tenantId is string
                && exists(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId))
              )
            )
          )
          || (
            request.resource.data.tenantId == resource.data.tenantId
            && isAdminForTenant(resource.data.tenantId)
          )
        );
      allow delete: if isAuthenticated()
        && (
          request.auth.uid == userId
          || isAdminForTenant(resource.data.tenantId)
        );
    }

    match /tenants/{tenantId} {
      allow read: if isTenantUser(tenantId) || isAdminUser();
      allow create: if isAuthenticated()
        && request.resource.data.id == tenantId
        && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isAdminUser()
        || (isAuthenticated() && resource.data.ownerUid == request.auth.uid);
    }

    match /account_requests/{requestId} {
      allow create: if isAuthenticated()
        && request.auth.uid == requestId;
      allow read: if isAuthenticated()
        && (
          request.auth.uid == requestId
          || isAdminForTenant(resource.data.tenantId)
        );
      allow update, delete: if isAdminForTenant(resource.data.tenantId);
    }

    match /tenant_users/{tenantUserId} {
      allow read: if isAdminForTenant(resource.data.tenantId);
      allow create: if isAdminForTenant(request.resource.data.tenantId)
        || isSelfTenantUserWrite();
      allow update: if isAdminForTenant(request.resource.data.tenantId);
      allow delete: if isAdminForTenant(resource.data.tenantId);
    }

    match /tenant_directory/{tenantId} {
      allow read: if true;
      allow create: if isAuthenticated()
        && request.resource.data.id == tenantId
        && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isAdminUser()
        || (isAuthenticated() && resource.data.ownerUid == request.auth.uid);
    }

    match /tenants/{tenantId}/maintenance_tasks/{taskId} {
      allow read: if isTenantUser(tenantId) && hasMaintenanceReadAccess();
      allow create: if isTenantUser(tenantId)
        && hasMaintenanceWriteAccess()
        && isValidMaintenanceTask(request.resource.data, tenantId)
        && request.resource.data.createdByUid == request.auth.uid
        && request.resource.data.updatedByUid == request.auth.uid;
      allow update: if isTenantUser(tenantId)
        && hasMaintenanceWriteAccess()
        && isValidMaintenanceTask(request.resource.data, tenantId)
        && request.resource.data.createdByUid == resource.data.createdByUid
        && request.resource.data.createdAt == resource.data.createdAt
        && request.resource.data.updatedByUid == request.auth.uid;
      allow delete: if isTenantUser(tenantId) && hasMaintenanceWriteAccess();
    }

    match /tenants/{tenantId}/config/{configId} {
      allow read: if isTenantUser(tenantId);
      allow create, update, delete: if canWriteConfig(tenantId, configId);
    }

    match /tenants/{tenantId}/orders/{orderId} {
      allow read: if isTenantUser(tenantId);
      allow write: if isBackend();
    }

    match /tenants/{tenantId}/payments/{paymentId} {
      allow read, write: if isBackend();
    }

    match /tenants/{tenantId}/public_products/{productId} {
      allow read: if true;
      allow write: if isBackend() || isAdminForTenant(tenantId);
    }


    match /cross_catalog/{barcode} {
      allow read: if isAuthenticated();
      allow write: if isBackend() || isAdminUser();
    }

    match /usage/{usageId} {
      allow read: if isAdminForTenant(resource.data.tenantId);
      allow write: if isBackend();
    }

    match /limits/{limitId} {
      allow read: if isTenantUser(resource.data.tenantId);
      allow write: if isAdminForTenant(resource.data.tenantId) || isBackend();
    }

    match /alerts/{alertId} {
      allow read: if isAdminForTenant(resource.data.tenantId);
      allow write: if isBackend();
    }


    match /tenant_backups/{tenantId} {
      allow read: if isAdminForTenant(tenantId) || isBackend();
      allow write: if isBackend();

      match /runs/{runId} {
        allow read: if isAdminForTenant(tenantId) || isBackend();
        allow write: if isBackend();

        match /chunks/{chunkId} {
          allow read: if isAdminForTenant(tenantId) || isBackend();
          allow write: if isBackend();
        }
      }
    }

    match /tenants/{tenantId}/{document=**} {
      allow read: if isTenantUser(tenantId)
        && !isRestrictedTenantDocumentPath(document);
      allow write: if isTenantUser(tenantId)
        && hasTenantWriteRole()
        && !isRestrictedTenantDocumentPath(document);
    }
  }
}
