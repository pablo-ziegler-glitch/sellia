<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Excluye toda información sensible o regenerable. -->
    <exclude domain="database" path="." />
    <exclude domain="sharedpref" path="." />

    <!-- Estado de autenticación, tokens y archivos de sincronización local. -->
    <exclude domain="file" path="auth" />
    <exclude domain="file" path="auth/" />
    <exclude domain="file" path="sync" />
    <exclude domain="file" path="sync/" />
    <exclude domain="file" path="token" />
    <exclude domain="file" path="token/" />
    <exclude domain="file" path="tokens" />
    <exclude domain="file" path="tokens/" />
    <exclude domain="file" path="credentials" />
    <exclude domain="file" path="credentials/" />

    <!-- Cachés y artefactos temporales/regenerables. -->
    <exclude domain="root" path="cache" />
    <exclude domain="root" path="code_cache" />
    <exclude domain="root" path="no_backup" />
</full-backup-content>
